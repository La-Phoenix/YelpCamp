<% layout('./layouts/boilerplate') %> 
    <div id="cluster-map"></div>
    <h1>All Campgrounds </h1>
    <a href="/campgrounds/new">Add Campground</a>
    <% for(let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (campground.images.length){ %> 
                        <a href="/campgrounds/<%= campground._id %> "><img src="<%= campground.images[0].url %>" alt="" class="img-fluid"></a>
                    <% } else{ %> 
                        <a href="/campgrounds/<%= campground._id %> "><img src="https://res.cloudinary.com/dqj6iiyau/image/upload/v1659370832/YelpCamp/zfyusauxyrhtewbgkzhi.jpg" alt="" class="img-fluid"></a>
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %> 
                            <p><%= campground.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %> </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %> </a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    <% }%>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>
        
<script src="/javascripts/clusterMap.js"></script>

 
